{% extends 'base.html.twig' %}

{% block title %}Editează Subcategorie{% endblock %}

{% block body %}
    <h1>Editează Subcategorie în {{ categorie.nume }}</h1>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Salvează</button>
    {{ form_end(form) }}
    <a href="{{ path('app_categorii_cheltuieli_show', {'id': categorie.id}) }}" class="btn btn-secondary mt-3">Înapoi</a>
{% endblock %}