{% extends 'base.html.twig' %}

{% block title %}Detalii Comandă{% endblock %}

{% block body %}
    <h1>Detalii Comandă #{{ comanda.id }}</h1>

    <p><strong>Mașină Principală:</strong> {{ comanda.parcAutoNrSnapshot ?: 'N/A' }}</p>
    <p><strong>Mașină Accident:</strong> <span id="accident-auto-display">{{ comanda.nrAccidentAuto ?: 'N/A' }}</span></p>
    <form id="accident-auto-form" method="post" action="{{ path('app_comenzi_update_nr_accident_auto', {'id': comanda.id}) }}">
        <input type="text" id="nrAccidentAuto" name="nrAccidentAuto" value="{{ comanda.nrAccidentAuto ?: '' }}" list="parc_auto_list" autocomplete="off">
        <button type="submit" class="btn btn-primary btn-sm">Actualizează Mașină Accident</button>
    </form>
    <p><strong>Șofer:</strong> {{ comanda.sofer }}</p>
    <p><strong>Data Start:</strong> {{ comanda.dataStart ? comanda.dataStart|date('Y-m-d') : 'Nu sunt încă date disponibile' }}</p>
    <p><strong>Data Stop:</strong> {{ comanda.dataStop ? comanda.dataStop|date('Y-m-d') : 'Nu sunt încă date disponibile' }}</p>
    <p><strong>Număr Km:</strong> {{ comanda.numarKm is not null ? comanda.numarKm : 'Nu sunt încă date disponibile' }}</p>
    <p><strong>Profit:</strong> {{ comanda.profit }}</p>
    <p><strong>Observații:</strong> <span id="observatii-display">{{ comanda.observatii ?: 'N/A' }}</span></p>
    <form id="observatii-form" method="post" action="{{ path('app_comenzi_update_observatii', {'id': comanda.id}) }}">
        <textarea id="observatii" name="observatii">{{ comanda.observatii ?: '' }}</textarea>
        <button type="submit" class="btn btn-primary btn-sm">Actualizează Observații</button>
    </form>

    <h2>Tururi</h2>
    <a href="{{ path('app_tururi_new', {'comanda_id': comanda.id}) }}" class="btn btn-primary">Adaugă Tur</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Firma</th>
                <th>Ruta Încărcare</th>
                <th>Ruta Descărcare</th>
                <th>Kg</th>
                <th>Preț</th>
                <th>Liber</th>
                <th>Facturat</th>
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            {% for tur in comanda.tururis %}
                <tr>
                    <td>{{ tur.firma }}</td>
                    <td>{{ tur.rutaIncarcare }}</td>
                    <td>{{ tur.rutaDescarcare }}</td>
                    <td>{{ tur.kg }}</td>
                    <td>{{ tur.pret }}</td>
                    <td>{{ tur.liber }}</td>
                    <td>
                        <input type="checkbox" class="facturat-checkbox" data-id="{{ tur.id }}" data-type="tururi" {% if tur.facturat %}checked{% endif %}>
                    </td>
                    <td>
                        <a href="{{ path('app_tururi_edit', {'id': tur.id}) }}" class="btn btn-warning">Editează</a>
                        <form method="post" action="{{ path('app_tururi_delete', {'id': tur.id}) }}" style="display:inline;" onsubmit="return confirm('Ești sigur că vrei să ștergi acest tur?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tur.id) }}">
                            <button class="btn btn-danger">Șterge</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Niciun tur asociat</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h2>Retururi</h2>
    <a href="{{ path('app_retururi_new', {'comanda_id': comanda.id}) }}" class="btn btn-primary">Adaugă Retur</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Firma</th>
                <th>Ruta Încărcare</th>
                <th>Ruta Descărcare</th>
                <th>Kg</th>
                <th>Preț</th>
                <th>Liber</th>
                <th>Facturat</th>
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            {% for retur in comanda.retururis %}
                <tr>
                    <td>{{ retur.firma }}</td>
                    <td>{{ retur.rutaIncarcare }}</td>
                    <td>{{ retur.rutaDescarcare }}</td>
                    <td>{{ retur.kg }}</td>
                    <td>{{ retur.pret }}</td>
                    <td>{{ retur.liber }}</td>
                    <td>
                        <input type="checkbox" class="facturat-checkbox" data-id="{{ retur.id }}" data-type="retururi" {% if retur.facturat %}checked{% endif %}>
                    </td>
                    <td>
                        <a href="{{ path('app_retururi_edit', {'id': retur.id}) }}" class="btn btn-warning">Editează</a>
                        <form method="post" action="{{ path('app_retururi_delete', {'id': retur.id}) }}" style="display:inline;" onsubmit="return confirm('Ești sigur că vrei să ștergi acest retur?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ retur.id) }}">
                            <button class="btn btn-danger">Șterge</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Niciun retur asociat</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comenzi_index') }}" class="btn btn-secondary">Înapoi la listă</a>

    {% block javascripts %}
        {{ parent() }}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                let processed = false; // Flag pentru a preveni apelurile multiple

                // Gestionarea cererii AJAX pentru facturat
                document.querySelectorAll('.facturat-checkbox').forEach(function(checkbox) {
                    checkbox.addEventListener('change', function(e) {
                        if (processed) return;
                        processed = true;

                        var id = this.getAttribute('data-id');
                        var type = this.getAttribute('data-type');
                        var facturat = this.checked;
                        var url = type === 'tururi' ? 
                            '{{ path('app_tururi_update_facturat', {'id': 'ID'}) }}'.replace('ID', id) : 
                            '{{ path('app_retururi_update_facturat', {'id': 'ID'}) }}'.replace('ID', id);

                        fetch(url, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                                'X-Requested-With': 'XMLHttpRequest',
                            },
                            body: 'facturat=' + encodeURIComponent(facturat)
                        })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error(`Răspuns neașteptat de la server: ${response.status}`);
                            }
                            return response.json();
                        })
                        .then(data => {
                            if (data.success === true) {
                                console.log('Starea facturat actualizată cu succes.');
                            } else {
                                console.error('Eroare server:', data.error);
                                alert('A apărut o eroare la actualizarea stării: ' + (data.error || 'Răspuns neașteptat'));
                            }
                        })
                        .catch(error => {
                            console.error('Eroare AJAX:', error.message);
                            alert('Eroare la comunicarea cu serverul. Verifică consola pentru detalii.');
                        })
                        .finally(() => {
                            processed = false;
                        });
                    });
                });

                // Gestionarea formularului pentru observații
                document.getElementById('observatii-form').addEventListener('submit', function(e) {
                    e.preventDefault();
                    let form = this;
                    let observatii = document.getElementById('observatii').value;
                    let url = form.getAttribute('action');

                    fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'X-Requested-With': 'XMLHttpRequest',
                        },
                        body: 'observatii=' + encodeURIComponent(observatii)
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error(`Răspuns neașteptat de la server: ${response.status}`);
                        }
                        return response.json();
                    })
                    .then(data => {
                        if (data.success === true) {
                            document.getElementById('observatii-display').textContent = data.observatii || 'N/A';
                            console.log('Observațiile au fost actualizate cu succes.');
                        } else {
                            console.error('Eroare server:', data.error);
                            alert('A apărut o eroare la actualizarea observațiilor: ' + (data.error || 'Răspuns neașteptat'));
                        }
                    })
                    .catch(error => {
                        console.error('Eroare AJAX:', error.message);
                        alert('Eroare la comunicarea cu serverul. Verifică consola pentru detalii.');
                    });
                });

                // Gestionarea formularului pentru mașina de accident
                document.getElementById('accident-auto-form').addEventListener('submit', function(e) {
                    e.preventDefault();
                    let form = this;
                    let nrAccidentAuto = document.getElementById('nrAccidentAuto').value;
                    let url = form.getAttribute('action');

                    fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'X-Requested-With': 'XMLHttpRequest',
                        },
                        body: 'nrAccidentAuto=' + encodeURIComponent(nrAccidentAuto)
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error(`Răspuns neașteptat de la server: ${response.status}`);
                        }
                        return response.json();
                    })
                    .then(data => {
                        if (data.success === true) {
                            document.getElementById('accident-auto-display').textContent = data.nrAccidentAuto;
                            console.log('Mașina de accident a fost actualizată cu succes.');
                        } else {
                            console.error('Eroare server:', data.error);
                            alert('A apărut o eroare la actualizarea mașinii de accident: ' + (data.error || 'Răspuns neașteptat'));
                        }
                    })
                    .catch(error => {
                        console.error('Eroare AJAX:', error.message);
                        alert('Eroare la comunicarea cu serverul. Verifică consola pentru detalii.');
                    });
                });
            });
        </script>
        <datalist id="parc_auto_list">
            {% for parc_auto in parc_autos %}
                <option value="{{ parc_auto.nrAuto }}">
            {% endfor %}
        </datalist>
    {% endblock %}
{% endblock %}