{% extends 'base.html.twig' %}

{% block title %}Lista Comenzi{% endblock %}

{% block body %}
    <h1>Lista Comenzi</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                
                <th>Șofer</th>
                <th>Data Start</th>
                <th>Data Stop</th>
                <th>Număr Km</th>
                <th>Profit</th>
            </tr>
        </thead>
        <tbody>
            {% for comanda in comenzi %}
                <tr>
              
                    <td>{{ comanda.sofer }}</td>
                    {# Afișează datele cu formatare, dacă sunt DateTime #}
                    <td>{{ comanda.dataStart ? comanda.dataStart|date('Y-m-d') : '' }}</td>
                    <td>{{ comanda.dataStop ? comanda.dataStop|date('Y-m-d') : '' }}</td>
                    <td>{{ comanda.numarKm }}</td>
                    <td>{{ comanda.profit }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
