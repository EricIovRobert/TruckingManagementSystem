{% extends 'base.html.twig' %}

{% block title %}Lista Comenzi{% endblock %}

{% block body %}
    <h1>Lista Comenzi</h1>
    <a href="{{ path('app_comenzi_new') }}" class="btn btn-primary">Adaugă Comandă</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mașină</th>
                <th>Șofer</th>
                <th>Data Start</th>
                <th>Data Stop</th>
                <th>Nr. Km</th>
                <th>Profit</th>
                <th>Locatie</th> <!-- Coloană nouă -->
                <th>Liber</th> <!-- Coloană nouă -->
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            {% for comanda in comenzi %}
                <tr>
                    <td><a href="{{ path('app_comenzi_show', {'id': comanda.id}) }}">{{ comanda.parcAutoNrSnapshot ?: 'N/A' }}</a></td>
                    <td>{{ comanda.sofer }}</td>
                    <td>{{ comanda.dataStart ? comanda.dataStart|date('Y-m-d') : '' }}</td>
                    <td>{{ comanda.dataStop ? comanda.dataStop|date('Y-m-d') : 'Nu exista' }}</td>
                    <td>{{ comanda.numarKm is not null ? comanda.numarKm : 'Nu exista' }}</td>
                    <td>{{ comanda.profit }}</td>
                    <td>
                        {% set ultimaRutaDescarcare = null %}
                        {% if comanda.retururis|length > 0 %}
                            {% set ultimulRetur = comanda.retururis|last %}
                            {% set ultimaRutaDescarcare = ultimulRetur.rutaDescarcare %}
                        {% elseif comanda.tururis|length > 0 %}
                            {% set ultimulTur = comanda.tururis|last %}
                            {% set ultimaRutaDescarcare = ultimulTur.rutaDescarcare %}
                        {% endif %}
                        {{ ultimaRutaDescarcare ?: 'Nu există tururi/retururi' }}
                    </td>
                    <td>
                        {% set ultimulLiber = null %}
                        {% if comanda.retururis|length > 0 %}
                            {% set ultimulRetur = comanda.retururis|last %}
                            {% set ultimulLiber = ultimulRetur.liber %}
                        {% elseif comanda.tururis|length > 0 %}
                            {% set ultimulTur = comanda.tururis|last %}
                            {% set ultimulLiber = ultimulTur.liber %}
                        {% endif %}
                        {{ ultimulLiber ?: 'Nu există tururi/retururi' }}
                    </td>
                    <td>
                        <a href="{{ path('app_comenzi_edit', {'id': comanda.id}) }}" class="btn btn-warning">Editează</a>
                        <form method="post" action="{{ path('app_comenzi_delete', {'id': comanda.id}) }}" style="display:inline;" onsubmit="return confirm('Ești sigur că vrei să ștergi această comandă?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comanda.id) }}">
                            <button class="btn btn-danger">Șterge</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}